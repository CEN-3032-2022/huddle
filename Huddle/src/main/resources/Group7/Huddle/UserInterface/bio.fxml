<GridPane fx:id="pane" xmlns:fx="http://javafx.com/fxml" fx:controller="client.bioChangeController" hgap="20" vgap="20" styleClass="gridPane"> 
	  <padding><Insets top="10" right="30" bottom="10" left="30"/></padding>
      <Text text="Enter your new bio message in the text area below" GridPane.rowIndex = "0" GridPane.columnIndex = "0"/>
      <TextArea fx:id="Search" wrapText="true" prefHeight = "1550" prefWidth = "1550" GridPane.rowIndex = "1" GridPane.columnIndex = "0" GridPane.columnSpan = "19" styleClass="textArea"/>
      <Button fx:id="change" Text="Done" onAction="#change" GridPane.rowIndex = "2" GridPane.columnIndex = "1" GridPane.columnSpan = "1" styleClass="button"/>
