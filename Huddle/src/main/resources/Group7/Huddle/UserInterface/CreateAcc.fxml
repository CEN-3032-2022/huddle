<GridPane fx:id="pane" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="client.AccountCreationController" hgap="10" vgap="10" styleClass="gridPane"> 
      <Region GridPane.rowIndex = "0" styleClass="hatching-image" GridPane.halignment="CENTER" GridPane.valignment="CENTER" GridPane.columnSpan = "2"></Region>
      <Text text="Welcome to Huddle!" GridPane.rowIndex = "1" GridPane.columnIndex = "0" styleClass="huddle-header-text"/>
      <Text text="UserName (5-20 characters):" GridPane.rowIndex = "2" GridPane.columnIndex = "0" styleClass="info-text"/>
      <Text text="Password:" GridPane.rowIndex = "4" GridPane.columnIndex = "0" styleClass="info-text"/>
      <TextField fx:id="username" prefHeight = "10" prefWidth = "250" GridPane.rowIndex = "3" GridPane.columnIndex = "0" GridPane.columnSpan = "2" onKeyReleased="#handleOnKeyReleasedUsername"/>
      <TextField fx:id="password" prefHeight = "10" prefWidth = "250" GridPane.rowIndex = "5" GridPane.columnIndex = "0" GridPane.columnSpan = "2" onKeyReleased="#handleOnKeyReleasedPassword"/>
<!--       <Text text="Security Question 1: Where Did You Go To School?" GridPane.rowIndex = "9" GridPane.columnIndex = "0" styleClass="info-text"/>
      <Text text="Security Question 2: What Was Your First Car?" GridPane.rowIndex = "11" GridPane.columnIndex = "0" styleClass="info-text"/>
      <TextField fx:id="Q1" onKeyReleased="#handleOnKeyReleasedRecoveryAnswer" prefHeight = "10" prefWidth = "250" GridPane.rowIndex = "10" GridPane.columnIndex = "0" GridPane.columnSpan = "2"/>
      <TextField fx:id="Q2" onKeyReleased="#handleOnKeyReleasedRecoveryAnswer" prefHeight = "10" prefWidth = "250" GridPane.rowIndex = "12" GridPane.columnIndex = "0" GridPane.columnSpan = "2"/>  -->
      <Text fx:id="pwReq1Text" text="Password Must contain one or more captital letter" GridPane.rowIndex = "6" GridPane.columnIndex = "0" styleClass="password-req-text"/>
      <Text fx:id="pwReq2Text" text="Password Must contain one or more numeric character" GridPane.rowIndex = "7" GridPane.columnIndex = "0" styleClass="password-req-text"/>
      <Text fx:id="pwReq3Text" text="Password Must be between 7-20 characters" GridPane.rowIndex = "8" GridPane.columnIndex = "0" styleClass="password-req-text"/>
      <Text fx:id="takenUsernameWarningText" text="Username is unavailable" GridPane.rowIndex = "12" GridPane.columnIndex = "0" visible="false" styleClass="username-req-text"/>
      <Text fx:id="invalidAccountInfoText" text="Username or password is invalid" GridPane.rowIndex = "13" GridPane.columnIndex = "0" visible="false" styleClass="username-req-text"/>
      <Button fx:id="createAccountButton" text="Create Account" onAction="#createAccountButtonOnClick" GridPane.rowIndex = "14" GridPane.columnIndex = "1" GridPane.columnSpan = "1" styleClass="button"/>
      <Button fx:id="returnToLoginPageButton" text="Return To Login" onAction="#returnToLoginButtonOnClick" GridPane.rowIndex = "14" GridPane.columnIndex = "0" GridPane.columnSpan = "1" styleClass="button" GridPane.halignment="RIGHT"/>
</GridPane>
